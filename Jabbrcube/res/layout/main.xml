<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    >
<ImageView android:id="@+id/image" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:src="@drawable/logo_100"></ImageView>
<TextView android:text="Username" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<EditText android:text="" 
	android:id="@+id/username" 
	android:width="300px"
	android:layout_width="wrap_content" 
	android:layout_gravity="center_horizontal|bottom"
	android:layout_height="wrap_content">
</EditText>
<TextView android:text="Password" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<EditText android:text="" 
	android:id="@+id/password" 
	android:width="300px"
	android:password= "true"
	android:layout_width="wrap_content" 
	android:layout_gravity="center_horizontal|bottom"
	android:layout_height="wrap_content"></EditText>
<Button android:text="Login" 
	android:id="@+id/login" 
	android:width="200px"
	android:layout_width="wrap_content" 
	android:gravity="center_horizontal"
	android:layout_height="wrap_content"
	android:layout_marginTop="20px"
    android:layout_gravity="center_horizontal|bottom"
	android:padding="12dip"
	android:onClick="login"></Button>
</LinearLayout>
